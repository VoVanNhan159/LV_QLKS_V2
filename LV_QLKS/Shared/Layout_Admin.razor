@code {
    //Tắt preloading
    private string none = "";

    public string name;
    protected override async Task OnInitializedAsync()
    {
        none = "";
    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            none = "none";
            try{
                if (await sessionStorage.GetItemAsync<string>("admin_name") == null && await sessionStorage.GetItemAsync<string>("admin_phone") == null)
                {
                    this.DialogService.Close();
                    NavigationManager.NavigateTo("/");
                }
                name = await sessionStorage.GetItemAsync<string>("admin_name");
            StateHasChanged();
            }
            catch(Exception ex)
            {
                Console.WriteLine(ex.ToString());
            }
        }
        
    }
    protected async void Logout()
    {
        var confirmationResult = await this.DialogService.Confirm("Bạn có chắc đăng xuất không?", "Thông báo", new ConfirmOptions { OkButtonText = "Xác nhận", CancelButtonText = "Trở về" });
        if (confirmationResult == true)
        {
            sessionStorage.ClearAsync();
            NavigationManager.NavigateTo("/");
        }
    }
}
