@code {
    //Tắt preloading
    private string none = "";

    public string name;
    protected override async Task OnInitializedAsync()
    {
        none = "";
    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            none = "none";
            try{
                if (await sessionStorage.GetItemAsync<string>("owner_name") == null && await sessionStorage.GetItemAsync<string>("owner_phone") == null)
                {
                    this.DialogService.Close();
                    NavigationManager.NavigateTo("/");
                }
                name = await sessionStorage.GetItemAsync<string>("owner_name");
                StateHasChanged();
            }
            catch(Exception ex)
            {
                Console.WriteLine(ex.ToString());
            }
        }

    }
    protected async void Logout()
    {
        var confirmationResult = await this.DialogService.Confirm("Bạn có chắc đăng xuất không?", "Thông báo", new ConfirmOptions { OkButtonText = "Xác nhận", CancelButtonText = "Trở về" });
        if (confirmationResult == true)
        {
            sessionStorage.ClearAsync();
            NavigationManager.NavigateTo("/");
        }
    }
    protected async void ImportRoom()
    {
        var res = await DialogService.OpenAsync<Pages.OwnerArea.Room.ImportExcelRoom>
                (
                    "",
                       new Dictionary<string, object>() {},
                       new DialogOptions() { ShowTitle = true, Width = "", Height = "", Resizable = true, Draggable = true, AutoFocusFirstElement = true }
                );
        if(res != null)
        {
            if (res == 0)
                NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Success, Summary = "Thành công", Detail = "Import file thành công", Duration = 4000 });
            else
                NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Warning, Summary = "Thông báo", Detail = "Có " + res + " mẫu tin không hợp lệ. Vui lòng kiểm tra lại", Duration = 4000 });
        }
    }
